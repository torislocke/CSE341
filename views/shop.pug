extends layouts/main-content.pug

block content
        main 
            if prods.length > 0
                .grid 
                    each product in prods
                        article.card.product-item 
                            header.card_header 
                                h1.product-title #{product.title} 
                            div.card_image 
                                img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="A Book") 
                            .card_content 
                                h2.product_price $19.99
                                p.product_description A very interesting read.
                            .card_actions 
                                button.btn Add to Cart
            else 
                h1 No Products

                    
